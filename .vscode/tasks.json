{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build and run",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },

            "command": "go build -v -x; if ($?) { ./ponzi2.exe -logtostderr }",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher":["$go"],             

            "linux": {
                "command": "go build -v -x && ./ponzi2 -logtostderr" 
            }
        }
    ]
}