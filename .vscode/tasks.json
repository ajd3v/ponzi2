{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build and run",
            "isBuildCommand": true,
            "isBackground": true,

            "command": "go build -v -x; if ($?) { ./ponzi2.exe }",
            "isShellCommand": true,
            "options": {
                "cwd": "${workspaceRoot}"
            },
            
            "linux": {
                "command": "go build -v -x && ./ponzi2",
                "isShellCommand": true,
                "options": {
                    "cwd": "${workspaceRoot}"
                }
            }
        }
    ]
}